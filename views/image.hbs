{{>header}}
<body>
  <div class="loader"></div>
  <div id="app">
    <section class="section">
      <div class="container mt-5">
        <div class="row">
          <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
            <div class="card card-primary">
              <div class="card-header">
                <h4>Cont Register</h4>
              </div>
              <div class="card-body">
                  {{#if errors}}
                
                 <form action="/auth/contReg" method="post" enctype="multipart/form-data">
                  <div class="row">
                    <div class="form-group col-6">
                      <label for="frist_name">Import your Image</label>
                      <input id="image" type="file" class="form-control" name="image" autofocus>
                      {{#if errors.image}}
                       <div class="alert alert-danger alert-dismissible fade show" role="alert">{{errors.image}}</div>
                       {{/if}}
                    </div>
                  </div>
                 
                 
                  </div>
       
                  <div class="form-group">
                   <input type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                      
                    </input>
                  </div>
                </form>
                  {{/if}}
                    {{#unless errors}}     
                <form action="/auth/contReg" method="post"  enctype="multipart/form-data">
                  <div class="row">
                    <div class="form-group col-6">
                      <label for="frist_name">Import your Image</label>
                      <input id="image" type="file" class="form-control" name="image" autofocus>
                      {{#if errors.image}}
                       <div class="alert alert-danger alert-dismissible fade show" role="alert">{{errors.image}}</div>
                       {{/if}}
                    </div>
                  </div>
                 
                 
                  </div>
       
                  <div class="form-group">
                   <input type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                      
                    </input>
                  </div>
                </form>
                {{/unless}}
              </div>
             
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- General JS Scripts -->
  <script src="/../js/app.min.js"></script>
  <!-- JS Libraies -->
  <script src="/../bundles/jquery-pwstrength/jquery.pwstrength.min.js"></script>
  <script src="/../bundles/jquery-selectric/jquery.selectric.min.js"></script>
  <!-- Page Specific JS File -->
  <script src="/../js/page/auth-register.js"></script>
  <!-- Template JS File -->
  <script src="/../js/scripts.js"></script>
  <!-- Custom JS File -->
  <script src="/../js/custom.js"></script>
</body>


