{{>header}}
<body>
  <div class="loader"></div>
  <div id="app">
    <section class="section">
      <div class="container mt-5">
        <div class="row">
          <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
            <div class="card card-primary">
              <div class="card-header">
                <h4>Login</h4>
              </div>
              <div class="card-body">
                 <form action="/auth/login" method="post">
                    <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" type="email" value="{{body.email}}" class="form-control" name="email" tabindex="1"  autofocus>
                     {{#if errors.email}}
                       <div class="alert alert-danger alert-dismissible fade show" role="alert">{{errors.email}}</div>
                       {{/if}}
                    <div class="invalid-feedback">
                      Please fill in your email
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="d-block">
                      <label for="password" class="control-label">Password</label>
                      <div class="float-right">
                        
                      </div>
                    </div>
                    <input id="password" type="password" value="{{body.password}}" class="form-control" name="password" tabindex="2" >
                    {{#if errors.password}}
                       <div class="alert alert-danger alert-dismissible fade show" role="alert">{{errors.password}}</div>
                       {{/if}}
                    <div class="invalid-feedback">
                      please fill in your password
                    </div>
                  </div>
                 
                  <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                      
                    </input>
                  </div>
                </form>
                <div class="text-center mt-4 mb-3">
                  <div class="text-job text-muted">Login With Social</div>
                </div>
                <div class="row sm-gutters ">
                  <div class="col-12 d-flex ">
                        <a href="/auth/auth/google" style="text-align: center;width: auto;margin: auto;" class="btn btn-block btn-social btn-google">
                        
                  Google  <i style="" class="fab fa-google"></i>
                        
                        </a>
                  </div>
                  
                </div>
              </div>
            </div>
            <div class="mt-5 text-muted text-center">
              Don't have an account? <a href="/auth/reg">Create One</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- General JS Scripts -->
  <script src="/../js/app.min.js"></script>
  <!-- JS Libraies -->
  <!-- Page Specific JS File -->
  <!-- Template JS File -->
  <script src="/../js/scripts.js"></script>
  <!-- Custom JS File -->
</body>


